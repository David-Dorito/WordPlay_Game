<UserControl x:Class="WordPlayGameClient.View.MainView.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WordPlayGameClient.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{Binding BackgroundColour}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="20*" MinWidth="205" MaxWidth="260"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="20*" MinHeight="90" MaxHeight="130"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button FontSize="32" Content=" Confirm " FontWeight="Light" Background="LightGreen" Command="{Binding UsernameConfirmed}" Grid.Row="1" MinHeight="46" BorderBrush="Black"/>
            <TextBlock Text="{Binding DisplayText}" FontSize="28" TextAlignment="Left" Background="Transparent" FontWeight="UltraLight" MinHeight="44" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" FontSize="24" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="Transparent" Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" MinHeight="44" BorderBrush="Black" MaxLength="40"/>
        </Grid>
    </Grid>
</UserControl>
